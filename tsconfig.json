{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "Node16",                                     
    "moduleResolution": "Node16", 
    "outDir": "./dist",                 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,          
    "noImplicitAny": false,
    "skipLibCheck": true,   
    "paths": {
      "@utils/*" : ["./src/utils/*"],
    }                            
  }, "include": ["src/**/*.ts"]
}
