// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis]
}

model Meetup {
  id          String                                 @id @default(uuid())
  name        String
  description String
  tags        String[]
  time        DateTime                               @default(now())
  coordinates Unsupported("geometry(Polygon, 4326)")
  users       MeetupUser[]

  @@index([coordinates], name: "location_idx", type: Gist)
}

model User {
  id         String       @id @default(uuid())
  login      String?      @unique
  password   String?
  roles      Role[]
  provider   String?
  providerId String?      @unique
  name       String?
  age        Int?
  sex        Sex?
  photo      String?
  email      String?
  meetups    MeetupUser[]
}

model MeetupUser {
  userId   String
  meetupId String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  meetup   Meetup @relation(fields: [meetupId], references: [id], onDelete: Cascade)

  @@id([userId, meetupId])
}

enum Role {
  USER
  ADMIN
  MEETUP_ORGANIZER
}

enum Sex {
  MALE
  FEMALE
}
