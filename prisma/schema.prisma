generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Meetup {
  id          String       @id @default(uuid())
  name        String
  description String
  tags        String[]
  time        DateTime     @default(now())
  place       String
  users       MeetupUser[]
}

model User {
  id       String       @id @default(uuid())
  login    String       @unique
  password String
  role     Role
  meetups  MeetupUser[]
}

model MeetupUser {
  userId   String
  meetupId String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  meetup   Meetup @relation(fields: [meetupId], references: [id], onDelete: Cascade)

  @@id([userId, meetupId])
}

enum Role {
  USER
  MEETUP_ORGANIZER
}
